<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/box_green">

    <TextView
        android:id="@+id/tvConfirmationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete this course?"
        android:padding="16dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnConfirmDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes, delete"
        android:textColor="@color/black"
        android:backgroundTint="@color/logout_red"/>

    <Button
        android:id="@+id/btnCancelDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray_text" />

</LinearLayout>